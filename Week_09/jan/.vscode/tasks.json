{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
"tasks": [
    {
        "label": "cmake",
        "command": "cmake",
        "args": [
            "-DCMAKE_BUILD_TYPE=Debug"
        ],
        "problemMatcher": []
    },
    {
        "label": "make",
        "command": "make",
        "args": [
            ""
        ],
        "group": {
            "kind": "build",
            "isDefault": true
        },
        "problemMatcher": [
            "$gcc"
        ]
    },
    {
        "label": "test",
        "type": "shell",
        "group": {
            "kind": "build",
            "isDefault": true
        },
        "presentation": {
            "echo": true,
            "reveal": "always",
            "focus": false,
            "panel": "shared"
        },
        "windows": {
            "command": "${workspaceRoot}/build.cmd",
            "args": [
                "<Path/To/MinGW/Cygwin/Bin/Folder>",
                "polyparser.exe"
            ]
        },
        "linux": {
            "command": "g++",
            "args": [
                "-g",
                "-Wall",
                "test/*.cpp",
                "--std=c++14",
                "-I",
                "/media/jan/C2D45DBAD45DB201/Users/Jan/Dropbox/polynomes/googletest/googletest/include",
                "-o",
                "polyparser_test.out"
            ]
        }
    }
]
}